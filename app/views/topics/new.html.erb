<div class="topic-new-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1 class="text-center">Add Picture</h1>
        <%= form_for @topic do |f| %>
          <div class="form-group">
            <%= f.fields_for :image_files do |m| %>
              <%= m.label :image %>
              <%= m.file_field :image, multiple: true, name:"image_files[image][]" %>
            <% end %>
          </div>
        <div class="form-group">
          <%= f.label :description %>
          <%= f.text_area:description, class: 'form-control' %>
        </div>
        <% if logged_in? %>
        <%= f.submit '投稿', class: 'btn btn-black btn-block' %>
        <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
