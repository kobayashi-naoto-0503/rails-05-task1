<div class="topic-new-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1 class="text-center">Topic Edit</h1>
        <%= form_for @topic  do |f| %>
        <div class="form-group">
          <%= f.label :image %>
          <%= f.file_field :image %>
        </div>
        <div class="form-group">
          <%= f.label :description %>
          <%= f.text_area:description, class: 'form-control' %>
        </div>
        <% if logged_in? %>
          <%= f.submit '更新', class: 'btn btn-black btn-block' %> <%# submitは自動でupdateかcreateかを判断してくれる。formメソッドのおかげ %>
          <%= link_to "削除する", "/topics/#{@topic.id}", method: :delete %>
          <%# 削除する際のroutingはpathが指定されていなかったら、urlの指定（"/topics/#{@topic.id}"）で書かないとdestroyアクションを呼べない %>
          <%= link_to "戻る", topics_path %>
        <% end %>
        
        <% end %>
      </div>
    </div>
  </div>
</div>