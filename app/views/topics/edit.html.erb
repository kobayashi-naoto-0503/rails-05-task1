<div class="topic-new-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1 class="text-center">Topic Edit</h1>
        <%= form_for @topic  do |f| %>
        <div class="form-group">
          <%= f.label :image %>
          <%= f.file_field :image %>
        </div>
        <div class="form-group">
          <%= f.label :description %>
          <%= f.text_area:description, class: 'form-control' %>
        </div>
        <% if logged_in? %>
          <%= f.submit '更新', class: 'btn btn-black btn-block' %> <%# submitは自動でupdateかcreateかを判断してくれる。formメソッドのおかげ？ %>
          <button type="button" class='btn btn-black btn-block'>削除</button> <%# 削除の機能を追加する　%>
          <a class='btn btn-black btn-block' href="topics_path" role="button">戻る</a> <%#　if logged_in?内に書かないと、routingエラーになる　%>
        <% end %>
        
        <% end %>
      </div>
    </div>
  </div>
</div>